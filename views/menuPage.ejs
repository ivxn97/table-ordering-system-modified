<!DOCTYPE html>
<html>
<meta charset="UTF-8">
<title>Food Menu</title>
<meta name="viewport" content="width=device-width,initial-scale=1">
<link rel="stylesheet" href="https://www.w3schools.com/w3css/4/w3.css">

<head>
  <style>
  h1,h2,h3,h4,h5,h6 {
    font-weight: bold;
    font-family: 'Courier New', Courier, monospace;
  }
  body {
    font-weight: bold;
    font-family: 'Courier New', Courier, monospace;
    background-color: floralwhite;
    background-size: 100% 100%;
    background-repeat: no-repeat;
  }
  input[type=text] {
    border:none;
    outline:none;
    background:transparent;
    text-align: left;
    margin-bottom: 10px;
    width: 38%;
  }
  button {
    margin: 20px;
    border-radius: 4px;
    text-align: center;
  }
  label{
    padding-left: 2px;
  }
  ul {
  display: table;
  margin: 0 auto;
  text-align: center;
  }
  #centered {
    margin-right: 9%;
  }
  </style>
</head>
<body>
<!-- Start Content -->
<button type="button" class="w3-right w3-black w3-large button" onclick="LoginFunction()";>Login</button>

<!-- Menu -->
<div id="menu" class="w3-container w3-large" >
    <h1 style="color:black" class="w3-center w3-jumbo">THE MENU</h1>
    <h1 style="color:black" class="w3-center w3-xxxlarge w3-padding-32">FOOD</h1>
    <ul>
        <% foodmenu.forEach(function(food) { -%>
          <table>
            <tr>
            <td>
                <form id="foodForm" action="/addToCart" method="post">
                <input type="text" name="name" id="name" value="<%= food.item_name %>"readonly style="font-size: 20px;"/>
                <input type="text" name="price" id="price" value="<%- food.item_price -%>" style ="width: 18%; text-align: center;" class="w3-dark-grey w3-round"readonly/>
                <br/>
                    <label for="quantity">Select Quantity:</label>
                    <select name="quantity" id="quantity">
                      <option value="1">1</option>
                      <option value="2">2</option>
                      <option value="3">3</option>
                      <option value="4">4</option>
                      <option value="5">5</option>
                    </select>
                  </br></br>
                  <div id="centered">
                    <input type="submit" value="Add to cart">
                  </div>
                </form>
            </td>
          </tr>
        </table>
      </br></br>
          <% }); -%>
      </ul>

      <h1 style="color:black" class="w3-center w3-xxxlarge w3-padding-32">DRINKS</h1>
      <ul>
        <% drinkmenu.forEach(function(drink) { -%>
          <table>
            <tr>
            <td>
                <form id="drinkForm" action="/addToCart" method="post">
                <input type="text" name="name" id="name" value="<%= drink.item_name %>"readonly style="font-size: 20px;"/>
                <input type="text" name="price" id="price" value="<%- drink.item_price -%>" style ="width: 18%; text-align: center;" class="w3-dark-grey w3-round"readonly/>
                <br/>
                    <label for="quantity">Select Quantity:</label>
                    <select name="quantity" id="quantity">
                      <option value="1">1</option>
                      <option value="2">2</option>
                      <option value="3">3</option>
                      <option value="4">4</option>
                      <option value="5">5</option>
                    </select>
                  </br></br>
                  <div id="centered">
                    <input type="submit" value="Add to cart">
                  </div>
                </form>
            </td>
          </tr>
        </table>
      </br></br>
          <% }); -%>
      </ul>
<div class="w3-center w3-xlarge">
    <form id="viewCart" action="/viewCart" method="post">
      <button type="submit">View Cart</button>
    </form>
</div>
<!-- End Content -->
</div>

<script>
  function LoginFunction()
  {
    location.href = "loginPage.html";
  }
  
</script>

</body>
</html>