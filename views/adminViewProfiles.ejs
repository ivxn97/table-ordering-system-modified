<!DOCTYPE html>
<html lang="en">
<head>
  <style>
    body{
      background-color: aliceblue;
    }

    h1{
      padding-left: 30px;
    }

    th{
      padding-left: 5px;
      padding-right: 5px;
      background-color:antiquewhite;
      font-size: 20px;
    }

    td{
      text-align: center;
      padding:15px;
      font-size:20px;
      background-color: white;
    }

      .button {
      background-color:lightgray;
      color: black;
      padding: 10px 10px;
      margin: 8px 0;
      border: none;
      cursor: pointer;
      width:150px;
      border-radius: 15px;
      font-weight: bold;
      font-size:16px;
      border: 2px solid black;
      margin-left: 50px;
    }
    .button:hover {
      opacity: 0.8;
      background-color: black;
      color:white;
    }
  </style>
</head>

<body>
  <div class="container-fluid">
    <div class="alert alert-secondary text-center">
      <h1>View all Accounts from selected Profile</h1>
    </div>
    <button type="button" class="button" onclick="Back()">Back</button><br/><br/>
    <ul>
      <table style= "border-collapse: collapse;" border ="1">
        <th>First Name</th>
        <th>Last Name</th>
        <th>Username</th>
        <th>Password</th>
        <th>Profile Type</th>
        <% accounts.forEach(function(account) { %>
          <tr>
            <td><%= account.first_name %></td>
            <td><%= account.last_name %></td>
            <td><%= account.username %></td>
            <td><%= account.password %></td>
            <td><%= account.profiletype %></td>
          </tr>
        <% }); %>
      </table>
    </ul>
    </div>
    <script>
      function Back()
      {
        location.href = "adminPage.html";
      }
    </script>
</body>
</html>
