<!DOCTYPE html>
<html lang="en">
<head>
    <style>
      h1{
        padding-left: 38px;
      }

      body{
        background-color: aliceblue;
      }

      th{
      padding-left: 5px;
      padding-right: 5px;
      background-color:antiquewhite;
      font-size: 20px;
    }

    td{
      text-align: center;
      padding:15px;
      font-size:20px;
      background-color: white;
    }

      .button {
      background-color:lightgray;
      color: black;
      padding: 10px 10px;
      margin: 8px 0;
      border: none;
      cursor: pointer;
      width:150px;
      border-radius: 15px;
      font-weight: bold;
      font-size:16px;
      border: 2px solid black;
      margin-left: 50px;
    }
    .button:hover {
      opacity: 0.8;
      background-color: black;
      color:white;
    }
    </style>
</head>

<body>
  <div class="container-fluid">
    <div class="alert alert-secondary text-center">
      <h1>Weekly Report View</h1>
    </div>
    <button type="button" class="button" onclick="Back()">Back</button><br/><br/>
    <ul>
      <table style= "border-collapse: collapse;" border = "1">
        <th>Email</th>
        <th>Date</th>
        <th>Spending</th>
        <th>Most Food Ordered</th>
        <% customer.forEach(function(cust) { %>
          <tr>
            <td><%= cust.email %></td>
            <td><%= cust.date %></td>
            <td><%= parseFloat(cust.spending).toFixed(2) %></td>
            <td><%= cust.food_order %></td>
          </tr>
        <% }); %>
      </table>
      
    </ul>
    </div>
    <script>
      function Back()
      {
        location.href = "ownerPage.html";
      }
    </script>
</body>
</html>
