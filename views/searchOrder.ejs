<!DOCTYPE html>
<html lang="en">
<head>
  <style>
    body{
      background-color: aliceblue;
    }

    th{
      padding-left: 5px;
      padding-right: 5px;
      background-color:antiquewhite;
      font-size: 20px;
    }

    td{
      text-align: center;
      font-size: 20px;
      background-color: white;
    }
    
    .button {
      background-color:lightgray;
      color: black;
      padding: 10px 10px;
      margin: 8px 0;
      border: none;
      cursor: pointer;
      width:150px;
      border-radius: 15px;
      font-weight: bold;
      font-size:16px;
      border: 2px solid black;
    }
    .button:hover {
      opacity: 0.8;
      background-color: black;
      color:white;
    }
    
  </style>
</head>

<body>
  <div class="container-fluid">
    <div class="alert alert-secondary text-center" style="margin-left: 50px;">
      <h1>Search order for table number <%= kitchenorder.table_no %></h1>
      <form id="viewOrdersForm" action="/staffView" method="post">
        <button type="submit" class="button" >Back</button><br/><br/><br/>
      </form>
    </div>
    <ul>
      <table style= "float:left; border-collapse: collapse;" border ="1">
        <th>Food Order</th>
        <th>Quantity</th>
        <th>Order Status</th>
        <% kitchenorder.forEach(function(order) { %>
        <tr>
          <td style="padding:15px"><%= order.food_order %></td>
          <td style="padding:15px"><%= order.quantity %></td>
          <td style="padding:15px"><%= order.order_status %></td>
        </tr>
        <% }); %>
      </table>
    </ul>
    </div>
    <br/><br/><br/><br/><br/><br/><br/><br/><br/><br/>
    <script>
      function Back()
      {
        location.href = "staffPage.html";
      }
    </script>
</body>
</html>
